<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>User:</strong>
    <%= "Dev" %>
  </p>

  <p>
    <%= comment.body %>
  </p>
<% end %>

<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label "Insira um comentÃ¡rio" %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<div>
  <button><%= link_to "Edit", edit_article_path(@article)%></button>
  <button><%= link_to "Destroy", article_path(@article),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  </button>
  <button><%= link_to "Back", root_path %></button>

</div>
