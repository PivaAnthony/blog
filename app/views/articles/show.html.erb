<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<h2>Comments</h2>
<%= render @article.comments %>

<%= render 'comments/form'%>

<div>
  <button><%= link_to "Edit", edit_article_path(@article)%></button>
  <button><%= link_to "Destroy", article_path(@article),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  </button>
  <button><%= link_to "Back", root_path %></button>

</div>
